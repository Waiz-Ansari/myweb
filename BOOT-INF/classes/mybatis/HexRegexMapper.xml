<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.queclink.protocol.dao.HexRegexDao">

    <select id="get" resultType="com.queclink.protocol.domain.HexRegexDO">
        select `id`, `format`, `regex`, `create_time`, `modified_time`, `is_delete`
        from ru_hex_regex
        where id = #{value}
    </select>

    <select id="list" resultType="com.queclink.protocol.domain.HexRegexDO">
        select `id`,`format`,`regex`,`create_time`,`modified_time`,`is_delete` from ru_hex_regex
        <where>
            <if test="id != null and id != ''">and id = #{id}</if>
            <if test="format != null and format != ''">and format = #{format}</if>
            <if test="regex != null and regex != ''">and regex = #{regex}</if>
            <if test="createTime != null and createTime != ''">and create_time = #{createTime}</if>
            <if test="modifiedTime != null and modifiedTime != ''">and modified_time = #{modifiedTime}</if>
            <if test="isDelete != null and isDelete != ''">and is_delete = #{isDelete}</if>
        </where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="count" resultType="int">
        select count(*) from ru_hex_regex
        <where>
            <if test="id != null and id != ''">and id = #{id}</if>
            <if test="format != null and format != ''">and format = #{format}</if>
            <if test="regex != null and regex != ''">and regex = #{regex}</if>
            <if test="createTime != null and createTime != ''">and create_time = #{createTime}</if>
            <if test="modifiedTime != null and modifiedTime != ''">and modified_time = #{modifiedTime}</if>
            <if test="isDelete != null and isDelete != ''">and is_delete = #{isDelete}</if>
        </where>
    </select>
    <select id="getRegByFormat" resultType="com.queclink.protocol.domain.HexRegexDO">
        select `id`, `format`, `regex`, `create_time`, `modified_time`, `is_delete`
        from ru_hex_regex
        where is_delete = 0
          and format = #{format}
    </select>

    <insert id="save" parameterType="com.queclink.protocol.domain.HexRegexDO">
        insert into ru_hex_regex
        (`id`,
         `format`,
         `regex`,
         `create_time`,
         `modified_time`,
         `is_delete`)
        values (#{id},
                #{format},
                #{regex},
                #{createTime},
                #{modifiedTime},
                #{isDelete})
    </insert>

    <update id="update" parameterType="com.queclink.protocol.domain.HexRegexDO">
        update ru_hex_regex
        <set>
            <if test="format != null">`format` = #{format},</if>
            <if test="regex != null">`regex` = #{regex},</if>
            <if test="createTime != null">`create_time` = #{createTime},</if>
            <if test="modifiedTime != null">`modified_time` = #{modifiedTime},</if>
            <if test="isDelete != null">`is_delete` = #{isDelete}</if>
        </set>
        where id = #{id}
    </update>

    <delete id="remove">
        delete
        from ru_hex_regex
        where id = #{value}
    </delete>

    <select id="getReg" resultType="java.lang.String">
        select `regex`
        from ru_hex_regex
        where is_delete = 0
          and format = #{format} limit 0,1
    </select>

</mapper>